generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  phone     String @unique
  password  String
  avatar    String

  boards     Board[]     @relation("OwnerBoards")
  boardUsers BoardUser[]
}

model Board {
  id          Int         @id @default(autoincrement())
  title       String
  logo        String
  description String
  owner       User        @relation("OwnerBoards", fields: [ownerId], references: [id])
  ownerId     Int
  members     BoardUser[]
  columns     Column[]    @relation("boardsColumns")
}

model BoardUser {
  id      Int   @id @default(autoincrement())
  board   Board @relation(fields: [boardId], references: [id])
  boardId Int
  user    User  @relation(fields: [userId], references: [id])
  userId  Int

  @@unique([boardId, userId])
}

model Column {
  id      Int    @id @default(autoincrement())
  title   String
  board   Board  @relation("boardsColumns", fields: [boardId], references: [id])
  boardId Int
}
